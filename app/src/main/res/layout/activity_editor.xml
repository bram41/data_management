<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layoutPicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/gambar"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/icon_dosen" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabChoosePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_camera_alt_black_24dp"
                    app:fabSize="mini"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_below="@id/layoutPicture"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/layoutName"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/cardview_default_elevation"
                    android:layout_marginBottom="25dp"
                    app:cardCornerRadius="0dp"
                    tools:ignore="PrivateResource">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:id="@+id/ly_kode"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/kode_dosen"
                                android:hint="@string/kode_dosen"
                                android:fontFamily="sans-serif-light"
                                android:inputType="textPersonName|textCapWords"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:id="@+id/ly_nama"
                            android:layout_below="@id/ly_kode"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/nama_dosen"
                                android:hint="Nama Dosen"
                                android:fontFamily="sans-serif-light"
                                android:inputType="textPersonName|textCapWords"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:layout_below="@id/ly_nama"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="45dp"
                            android:id="@+id/datepicker"
                            android:text="Tanggal Lahir"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tgl"
                            android:layout_below="@id/datepicker"
                            android:textSize="20sp"
                            android:layout_marginTop="20dp"
                            android:textColor="#000"
                            android:text="Tanggal : "/>

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:layout_below="@+id/tgl"
                            android:id="@+id/agama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="-3dp"
                            android:hint="Agama"
                            android:fontFamily="sans-serif-light"
                            android:inputType="textPersonName" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/agama"
                            android:id="@+id/ly_jenis"
                            android:text="Jenis Kelamin"
                            android:textSize="20sp"
                            android:layout_marginTop="20dp"
                            android:textColor="#000"/>
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_g"
                            android:orientation="horizontal"
                            android:layout_below="@id/ly_jenis">
                            <RadioButton
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:id="@+id/kel_0"
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pria" />
                            <RadioButton
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:id="@+id/kel_1"
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wanita" />
                        </RadioGroup>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/radio_g"
                            android:id="@+id/ly_status"
                            android:text="Status Pegawai"
                            android:textSize="20sp"
                            android:layout_marginTop="20dp"
                            android:textColor="#000"/>
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_status"
                            android:orientation="horizontal"
                            android:layout_below="@id/ly_status">
                            <RadioButton
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:id="@+id/st_0"
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tetap" />
                            <RadioButton
                                android:textSize="18dp"
                                android:textColor="#000"
                                android:id="@+id/st_1"
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tidak Tetap" />
                        </RadioGroup>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:id="@+id/ly_alamat"
                            android:layout_below="@id/radio_status"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/alamat"
                                android:hint="Alamat Dosen"
                                android:fontFamily="sans-serif-light"
                                android:inputType="textPersonName|textCapWords"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:id="@+id/ly_kota"
                            android:layout_below="@id/ly_alamat"
                            android:paddingBottom="20dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/kota"
                                android:hint="Kota Dosen"
                                android:fontFamily="sans-serif-light"
                                android:inputType="textPersonName|textCapWords"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </ScrollView>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>