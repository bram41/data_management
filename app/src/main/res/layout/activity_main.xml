<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/satu"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UJIAN TENGAH SEMESTER"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dua"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/satu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEMROGRAMAN MOBILE 2"
            android:textSize="25sp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:id="@+id/tiga"
            android:layout_below="@+id/dua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surya Saputra"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/empat"
            android:textColor="#000"
            android:layout_below="@+id/tiga"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A22.2018.02635"
            android:textSize="25sp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>